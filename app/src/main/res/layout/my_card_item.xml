<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_card_item_content"
            android:text="lalallaa"
            android:textColor="#666666"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:padding="6dp"
            android:layout_marginRight="12dp"
    />
       
   <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
   android:id="@+id/my_card_image_recycle"
   ></android.support.v7.widget.RecyclerView>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_margin="12dp"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="事件"
                  android:textSize="10sp"
                  android:layout_marginTop="8dp"
                  android:textColor="#999999"
                  android:id="@+id/my_card_item_time"
                  android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="删除"
                  android:textSize="10sp"
                  android:layout_marginTop="8dp"
                  android:textColor="#20affa"
                  android:id="@+id/my_card_item_delete"
                  android:layout_marginLeft="50dp"
                  />
        <ImageView
                   android:id="@+id/my_card_item_price"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/common_icon_prise_n"
                   android:layout_marginLeft="200dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="删除"
                  android:textSize="10sp"
                  android:layout_marginTop="8dp"
                  android:textColor="#999999"
                  android:id="@+id/my_card_item_pricenum"
                  android:layout_marginLeft="240dp"
        />
        <ImageView
                android:id="@+id/my_card_item_message"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/common_tab_message"
                android:layout_marginLeft="300dp"
        />

    </RelativeLayout>
</LinearLayout>