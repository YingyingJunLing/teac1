<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.activity.DetailsActivity"
>
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
     >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title"
            android:text="标题"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_time"
            android:text="时间"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/detail_title"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_source"
            android:text="来源"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/detail_time"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_summary"
            android:text="内容"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/detail_source"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <WebView
            android:id="@+id/par_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_summary"
            android:layout_marginTop="20dp"
            android:background="#AFADAD"
    ></WebView>

    <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_radius"
            android:id="@+id/detail_plate"
            android:text="内容"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/par_webview"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_radius"
            android:id="@+id/detail_plate1"
            android:text="内容"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/detail_plate"
            app:layout_constraintTop_toBottomOf="@id/par_webview"
            tools:ignore="MissingConstraints"/>
    <android.support.constraint.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/tuijian"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@id/detail_plate1"
            android:background="@drawable/circle_radius"
            tools:ignore="NotSibling" tools:layout_editor_absoluteX="0dp">
        <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/detail_tuijian"
                android:text="推荐"
                android:textColor="#999999"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingConstraints"/>
        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:id="@+id/detail_tuijian_img1"
                app:layout_constraintTop_toBottomOf="@id/detail_tuijian"
                app:roundedCornerRadius="10dp"
                android:layout_marginTop="28dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:id="@+id/detail_tuijian_img1_title1"
                android:text="推荐"
                android:textColor="#999999"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/detail_tuijian_img1"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintVertical_bias="0.304"/>
        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:id="@+id/detail_tuijian_img2"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_tuijian"
                app:roundedCornerRadius="10dp"
                android:layout_marginTop="28dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:id="@+id/detail_tuijian_img1_title2"
                android:text="推荐"
                android:textColor="#999999"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/detail_tuijian_img2"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="223dp" app:layout_constraintVertical_bias="0.304"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:id="@+id/pinglun"
            android:text="推荐"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/tuijian"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_ping_recy"
            app:layout_constraintTop_toBottomOf="@id/pinglun"
            tools:ignore="MissingConstraints,NotSibling"></android.support.v7.widget.RecyclerView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tuijian"
            app:layout_constraintBottom_toBottomOf="parent"
    >
<ImageView
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="13dp"
        android:id="@+id/detail_share_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/common_icon_share_n"
/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_share_num"
            android:text="num"
            android:textSize="8sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:textColor="#EC0C0C"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/detail_collection_img"
           app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_share_img"
            android:src="@mipmap/common_icon_collect"
    />
    <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="25dp"
            android:id="@+id/detail_zan_img"
           app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_collection_img"
            android:src="@mipmap/common_icon_praise_s"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_zan_num"
            android:text="num"
            android:textSize="8sp"
            android:textColor="#EC0C0C"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintRight_toRightOf="@id/detail_zan_img"
          app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:layout_marginTop="13dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:id="@+id/detail_message_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_zan_img"
            android:src="@mipmap/common_tab_message"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_message_num"
            android:text="num"
            android:textSize="8sp"
            android:layout_marginBottom="10dp"
            android:textColor="#EC0C0C"
            app:layout_constraintRight_toRightOf="@id/detail_message_img"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
            android:id="@+id/detail_edit_ping"
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="24dp"
            android:background="#AAA8A8"
            android:hint="既然来了，就留下点什么吧"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/detail_message_img"
            android:layout_marginRight="50dp"
    />
    <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/common_nav_btn_back_n"
            app:layout_constraintTop_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
    />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>