<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/Group_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:gravity="center_vertical">
        <CheckBox android:id="@+id/group_box"
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:button="@drawable/group_box"
                  android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/group_friend_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"/>
        <View android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/friend_list_recycle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
