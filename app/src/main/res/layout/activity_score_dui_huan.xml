<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/score_dui_con"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#999999"
    >
        <ImageView
                android:id="@+id/duihuan_back"
                android:layout_width="24dp"
                   android:layout_height="24dp"
                   tools:ignore="MissingConstraints"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginTop="10dp"
                   android:src="@mipmap/common_nav_btn_back_n"
                   android:layout_marginLeft="12dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="积分兑换"
                  android:textSize="20sp"
                  android:textColor="#000000"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"

        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/score_dui_con1"
            android:layout_height="112dp" 
            tools:layout_editor_absoluteY="60dp" 
            tools:ignore="MissingConstraints">
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/score_info_img"
                android:layout_width="140dp"
                android:layout_height="92dp"
                app:roundedCornerRadius="8dip"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/score_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="主题"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="14sp"
                android:textColor="#333333"
                app:layout_constraintLeft_toRightOf="@id/score_info_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
        />
        <TextView
                android:id="@+id/score_info_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="内容"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/score_info_title"
                app:layout_constraintLeft_toLeftOf="@id/score_info_title"
        />

        <TextView
                android:id="@+id/score_info_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="来源"
                android:maxLength="4"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginTop="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/score_info_title"
                android:layout_marginBottom="20dp"
        />
        <TextView
                android:id="@+id/score_info_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/score_info_source"
                app:layout_constraintLeft_toLeftOf="@id/score_info_source"
                android:layout_marginBottom="20dp"
        />

        <TextView
                android:id="@+id/score_share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
        />
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/info_share"
                android:src="@mipmap/common_icon_share_n"
                app:layout_constraintRight_toLeftOf="@id/score_share_num"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
        />
        <TextView
                android:id="@+id/score_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintRight_toLeftOf="@id/info_share"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
        />
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/info_zan"
                app:layout_constraintRight_toLeftOf="@id/score_zan_num"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
        />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/pop"
              app:layout_constraintTop_toBottomOf="@id/info_zan"
              android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/need_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所需积分："
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/score_dui_con1"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:id="@+id/my_score_dui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分："
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/need_score"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/pop"
          app:layout_constraintTop_toBottomOf="@id/my_score_dui"
          android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/lijiduihuan"
            android:layout_width="336dp"
            android:layout_height="40dp"
            android:text="立即兑换"
            android:layout_marginTop="300dp"
           android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:background="@drawable/huihuan_be"
            android:layout_marginBottom="24dp"
            />

</LinearLayout>