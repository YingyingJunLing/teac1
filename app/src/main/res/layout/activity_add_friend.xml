<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.activity.AddFriendActivity"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal"
            android:gravity="center">
        <LinearLayout android:id="@+id/search_add_linear"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="10px"
                      android:layout_marginLeft="5dp"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:background="@drawable/topbar_linear">
            <ImageView android:id="@+id/search_add_image"
                       android:layout_width="48px"
                       android:layout_height="48px"
                       android:layout_marginLeft="20px"
                       android:src="@mipmap/common_nav_btn_search_n"/>
            <EditText android:id="@+id/search_add_edit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"
                      android:layout_marginRight="20px"
                      android:hint="手机号、userId"
                      android:background="#00000000"
                      android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/text_add_finsh"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20px"
                  android:layout_marginRight="20px"
                  android:textColor="#888"
                  android:text="@string/finsh"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/friend_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/nav_btn_setting"/>
    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textSize="16sp"
              android:text="找人:"/>
    <TextView android:id="@+id/friend_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"/>
</LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout
            android:id="@+id/group_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/nav_btn_setting"/>
        <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:textSize="16sp"
                  android:text="找群:"/>
        <TextView android:id="@+id/group_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textSize="16sp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>