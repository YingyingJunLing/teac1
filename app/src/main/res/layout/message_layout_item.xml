<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="10dp">
    <ImageView
            android:id="@+id/friend_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"/>
    <TextView android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"/>
    <View android:layout_width="wrap_content" android:layout_height="@dimen/dp_0" android:layout_weight="1"/>
    <TextView android:id="@+id/text_num_shape"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_marginRight="@dimen/dp_10"
              android:background="@drawable/text_num_shape"
              android:visibility="gone"
              android:textColor="#fff"
              android:gravity="center"
              android:text="1"/>
</LinearLayout>
