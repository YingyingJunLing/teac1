<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:id="@+id/zixun_bar"
            android:layout_height="40dp"
            tools:ignore="MissingConstraints">
        <ImageView
                android:id="@+id/inform_sdg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:foregroundGravity="center"
                android:src="@mipmap/common_nav_btn_back_n"
        />
        <TextView
                android:layout_width="wrap_content"
                android:text="资讯"
                android:textSize="20dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        <ImageView
                android:id="@+id/inform_fdj"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:foregroundGravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/common_nav_btn_search_n"
        />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plate_item_recy"
            tools:ignore="MissingConstraints"/>
    <LinearLayout android:id="@+id/loading_linear_info"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center">
        <pl.droidsonroids.gif.GifImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/loading"/>
    </LinearLayout>
</LinearLayout>