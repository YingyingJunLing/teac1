<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        tools:context=".mvp.view.activity.FriendShowActivity">
    <ImageView
            android:src="@mipmap/find_message"
            android:layout_width="match_parent"
            android:layout_height="256dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/find_friend_img"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginTop="193dp"
            android:layout_centerHorizontal="true"
            app:roundAsCircle="true"/>
    <TextView
            android:id="@+id/find_friend_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nickName"
            android:textSize="20dp"
            android:layout_marginTop="260dp"
            android:layout_toRightOf="@id/find_friend_img"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_friend_img"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <TextView
                android:id="@+id/find_friend_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="find_friend_sign"
                android:textSize="14dp"
                android:textColor="#999999"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="64dp"
                android:text="--------------个人资料--------------"
                android:textSize="12dp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/find_friend_phone"
                android:text="phone"
                android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/find_friend_email"
                android:text="email"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
    <Button
            android:id="@+id/btn_find_friend"
            android:text="申请加为好友"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:background="#22B0FA"
            android:layout_width="336dp"
            android:layout_height="40dp"/>
</RelativeLayout>