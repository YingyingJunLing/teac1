<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:id="@+id/relativeLayout">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/user_head_constrain"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:background="@mipmap/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_header"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/login_icon_artificial"
                app:roundAsCircle="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="48dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_nickName"
                android:text="昵称"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toRightOf="@id/my_header"
                app:layout_constraintBottom_toBottomOf="@id/my_header"
                android:layout_marginLeft="12dp"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="32dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/my_qianming"
                android:text="个性签名"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/my_nickName"
                app:layout_constraintLeft_toLeftOf="@id/my_nickName"

               />
        <ImageView
                android:id="@+id/my_qiandao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/my_icon_sign_n"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginRight="15dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/my_qiandao_text"
                android:text="签到"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/my_qiandao"
                app:layout_constraintLeft_toLeftOf="@id/my_qiandao"
                android:gravity="center"
                tools:ignore="MissingConstraints"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/user_constraintLayout_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_buy"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_collect_n_xhdpi"
                app:layout_constraintLeft_toLeftOf="@id/my_collection"
                app:layout_constraintBottom_toBottomOf="@id/my_collection"
                tools:ignore="MissingConstraints"
                android:id="@+id/imageView2"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_collection"
                android:text="我的收藏"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="25dp"

        />
        <ImageView
                android:id="@+id/my_collection_next"
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_collection"
                app:layout_constraintBottom_toBottomOf="@id/my_collection"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints"/>

        <ImageView
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_attention_n_xhdpi"
                app:layout_constraintLeft_toLeftOf="@id/my_attention"
                app:layout_constraintBottom_toBottomOf="@id/my_attention"
                tools:ignore="MissingConstraints"
                android:id="@+id/imageView3"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_attention"
                android:text="我的关注"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_collection"
                android:paddingLeft="25dp"
        />
        <ImageView
                android:id="@+id/my_attention_next"
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_attention"
                app:layout_constraintBottom_toBottomOf="@id/my_attention"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints"/>
        <ImageView
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_card_n_xhdpi"
                app:layout_constraintLeft_toLeftOf="@id/my_card"
                app:layout_constraintBottom_toBottomOf="@id/my_card"
                tools:ignore="MissingConstraints"
                android:id="@+id/imageView4"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_card"
                android:text="我的帖子"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_attention"
                android:paddingLeft="25dp"/>
        <ImageView
                android:id="@+id/my_card_next"
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_card"
                app:layout_constraintBottom_toBottomOf="@id/my_card"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_notice_n_xhdpi"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toLeftOf="@id/my_notice"
                app:layout_constraintBottom_toBottomOf="@id/my_notice"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_notice"
                android:text="我的通知"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_card"
                android:paddingLeft="25dp"
        />
        <ImageView
                android:id="@+id/my_notice_next"
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_notice"
                app:layout_constraintBottom_toBottomOf="@id/my_notice"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_notice_score"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toLeftOf="@id/my_score"
                app:layout_constraintBottom_toBottomOf="@id/my_score"
                android:id="@+id/imageView"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_score"
                android:text="我的积分"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toBottomOf="@id/my_notice"/>
        <ImageView
                android:id="@+id/my_score_next"
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_score"
                app:layout_constraintBottom_toBottomOf="@id/my_score"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_task_n_xhdpi"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toLeftOf="@id/my_task"
                app:layout_constraintBottom_toBottomOf="@id/my_task"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:id="@+id/my_task"
                android:text="我的任务"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toBottomOf="@id/my_score"/>
        <ImageView
                android:id="@+id/my_task_next"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_task"
                app:layout_constraintBottom_toBottomOf="@id/my_task"
                android:layout_marginRight="20dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:src="@mipmap/my_icon_setting_n_xhdpi"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toLeftOf="@id/my_setting"
                app:layout_constraintBottom_toBottomOf="@id/my_setting"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:id="@+id/my_setting"
                android:text="我的设置"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toBottomOf="@id/my_task"/>
        <ImageView
                android:id="@+id/my_setting_next"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:src="@mipmap/my_icon_next_n_xhdpi"
                app:layout_constraintRight_toRightOf="@id/my_setting"
                app:layout_constraintBottom_toBottomOf="@id/my_setting"
                android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>

