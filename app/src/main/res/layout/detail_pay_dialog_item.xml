<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
           android:layout_height="200dp"
           ></RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
           android:background="@drawable/detail_shape_radius"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="30dp"
                        android:text="选择付费方式"
                        android:textColor="#666666"
                        android:textSize="20sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="让阅读随时随地"
                        android:textSize="12sp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp" />
            </LinearLayout>

            <ImageButton
                    android:id="@+id/dialog_dismiss_ibt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#fff"
                    android:src="@mipmap/com_icon_down" />
        </RelativeLayout>
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/scord_be"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分兑换"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买说明："
                        android:layout_marginLeft="100dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="8dp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Integral purchase"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="只需要一次性付费就可以对该咨询永久免费阅读："
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="12dp"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="8dp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@mipmap/payment_method_icon_integration_n_xhdpi"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp" />
                <TextView
                        android:id="@+id/detail_pay_duihuan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="点击兑换 > >"
                        android:layout_marginLeft="160dp"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="25dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/scord_be1"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开通会员"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员说明："
                        android:layout_marginLeft="100dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="8dp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="memebership purchase"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="会员可以免费阅读所有咨询"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="12dp"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="8dp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@mipmap/payment_method_icon_vip_n_xhdpi"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp" />
                <TextView
                        android:id="@+id/detail_pay_kaitong"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="点击开通 > >"
                        android:layout_marginLeft="160dp"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="25dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
