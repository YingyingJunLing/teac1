<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/user_notice_time"
                    android:text="时间"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_notice_img"
                    android:layout_below="@id/user_notice_time"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    app:roundAsCircle="true"
                    android:layout_marginLeft="20dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:id="@+id/user_notice_name"
                    android:text="name"
                    android:layout_toRightOf="@id/user_notice_img"
                    android:layout_below="@id/user_notice_time"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <TextView
                    android:id="@+id/request_text"
                    android:text="请求添加你为好友"
                    android:layout_below="@id/user_notice_img"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/message_text"
                    android:text="备注:"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/request_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/user_notice_allow"
                    android:text="同意"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="#20affa"
                    android:layout_below="@id/message_text"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="38dp"/>
            <Button
                    android:id="@+id/user_notice_refuse"
                    android:text="拒绝"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_toRightOf="@id/user_notice_allow"
                    android:background="#f00"
                    android:layout_below="@id/message_text"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="38dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
