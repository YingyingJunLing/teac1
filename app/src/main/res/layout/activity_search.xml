<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.activity.SearchActivity"
        android:gravity="center_horizontal"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal"
            android:gravity="center">
        <LinearLayout android:id="@+id/search_linear"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="20px"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:background="@drawable/topbar_linear">
            <ImageView android:id="@+id/search_image"
                       android:layout_width="48px"
                       android:layout_height="48px"
                       android:layout_marginLeft="20px"
                       android:src="@mipmap/common_nav_btn_search_n"/>
            <TextView android:id="@+id/search_edit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"
                      android:layout_marginRight="20px"
                      android:hint="@string/search"
                      android:background="#00000000"
                      android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/text_finsh"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20px"
                  android:layout_marginRight="20px"
                  android:textColor="#888"
                  android:text="@string/finsh"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热搜词"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="12px"
            android:layout_marginTop="20px"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sou_recy"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
    ></android.support.v7.widget.RecyclerView>
</LinearLayout>