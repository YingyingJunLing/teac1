<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
       android:background="#fff"
        android:orientation="vertical"
        android:layout_width="224dp"
        android:layout_height="118dp"
      >
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"

    >
        <ImageView
                android:id="@+id/delete_fail"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@mipmap/common_nav_btn_delete"
                android:layout_marginTop="8dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换失败"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
              android:layout_marginLeft="100dp"
        />

    </LinearLayout>
       <View android:layout_width="match_parent" android:layout_height="1dp"
             android:background="@color/pop"
             android:layout_marginTop="3dp"
       />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您目前积分不足，无法完成兑换"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
           android:layout_gravity="center"
    />
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"

    >
        <Button
                android:id="@+id/cancel_fail"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/be"
                android:text="取消"
                android:textColor="#fff"
               android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
        />
        <Button
                android:id="@+id/makeTask_fail"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="去赚积分"
                android:textColor="#fff"
                android:background="@drawable/scord_be"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="60dp"
        />

    </LinearLayout>
</LinearLayout>